<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".praying_time">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/sunrise"
                android:orientation="vertical"
                android:id="@+id/main_layout"
                android:layout_gravity="center"
                android:gravity="center">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_gravity="center">
                    <!--
                    uncomment it after finishing activity style
                    to avoid rendering problems-->
                    <TextClock
                        android:id="@+id/textclock"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:format12Hour="hh:mm"
                        android:text="@string/textview"
                        android:textColor="@color/white"
                        android:textSize="35sp" />


                    <TextView
                        android:id="@+id/txt_day"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/textview"
                        android:textColor="@color/white"
                        android:textSize="35sp" />
                </LinearLayout>

                <TextView
                    android:id="@+id/txt_hijri"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/textview"
                    android:textColor="@color/white"
                    android:textSize="25sp" />

                <TextView
                    android:id="@+id/txt_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/textview"
                    android:textColor="@color/white"
                    android:textSize="25sp" />

                <TextView
                    android:id="@+id/txt_salah_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/textview"
                    android:layout_marginTop="30dp"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/txt_remain"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/textview"
                    android:textColor="@color/white"
                    android:textSize="43sp" />

            </LinearLayout>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/main_ar"
                android:textSize="35sp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:paddingRight="25dp"
                android:paddingLeft="25dp"
                android:id="@+id/btn_main"
                android:textColor="@color/white"
                android:background="@drawable/btn_main"
                android:layout_margin="15dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="vertical"
                android:layout_marginBottom="10dp"
                android:background="@drawable/pic">

                <TextView
                    android:id="@+id/txt_pt_main"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/pt_ar"
                    android:textColor="@color/white"
                    android:textSize="71sp"
                    android:layout_marginTop="27dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rect"
                    android:orientation="horizontal"
                    android:layout_marginBottom="10dp">

                    <TextView
                        android:id="@+id/fajr_en"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:paddingStart="15dp"
                        android:paddingEnd="15dp"
                        android:text="Fajr"
                        android:textColor="@color/white"
                        android:textSize="38sp" />

                    <TextView
                        android:id="@+id/fajr_time"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="@string/textview"
                        android:textColor="@color/white"
                        android:textSize="38sp" />

                    <TextView
                        android:id="@+id/fajr_ar"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:paddingStart="15dp"
                        android:paddingEnd="15dp"
                        android:text="الفجر"
                        android:textColor="@color/white"
                        android:textSize="38sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rect"
                    android:orientation="horizontal"
                    android:layout_marginBottom="10dp">

                    <TextView
                        android:id="@+id/sun_en"
                        android:paddingStart="15dp"
                        android:paddingEnd="15dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:text="Sunrise"
                        android:textColor="@color/white"
                        android:textSize="38sp" />

                    <TextView
                        android:id="@+id/sun_time"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="@string/textview"
                        android:textColor="@color/white"
                        android:textSize="38sp" />

                    <TextView
                        android:id="@+id/sun_ar"
                        android:layout_width="match_parent"
                        android:paddingStart="15dp"
                        android:paddingEnd="15dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:text="الشروق"
                        android:textColor="@color/white"
                        android:textSize="38sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rect"
                    android:orientation="horizontal"
                    android:layout_marginBottom="10dp">

                    <TextView
                        android:id="@+id/Duhr_en"
                        android:paddingStart="15dp"
                        android:paddingEnd="15dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:text="Duhr"
                        android:textColor="@color/white"
                        android:textSize="38sp" />

                    <TextView
                        android:id="@+id/duhr_time"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="@string/textview"
                        android:textColor="@color/white"
                        android:textSize="38sp" />

                    <TextView
                        android:id="@+id/duhr_ar"
                        android:paddingStart="15dp"
                        android:paddingEnd="15dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:text="الظهر"
                        android:textColor="@color/white"
                        android:textSize="38sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rect"
                    android:orientation="horizontal"
                    android:layout_marginBottom="10dp">

                    <TextView
                        android:id="@+id/asr_en"
                        android:paddingStart="15dp"
                        android:paddingEnd="15dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:text="Asr"
                        android:textColor="@color/white"
                        android:textSize="38sp" />

                    <TextView
                        android:id="@+id/asr_time"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="@string/textview"
                        android:textColor="@color/white"
                        android:textSize="38sp" />

                    <TextView
                        android:id="@+id/asr_ar"
                        android:paddingStart="15dp"
                        android:paddingEnd="15dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:text="العصر"
                        android:textColor="@color/white"
                        android:textSize="38sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rect"
                    android:orientation="horizontal"
                    android:layout_marginBottom="10dp">

                    <TextView
                        android:id="@+id/mag_en"
                        android:paddingStart="15dp"
                        android:paddingEnd="15dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:text="Maghrib"
                        android:textColor="@color/white"
                        android:textSize="38sp" />

                    <TextView
                        android:id="@+id/mag_time"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="@string/textview"
                        android:textColor="@color/white"
                        android:textSize="38sp" />

                    <TextView
                        android:id="@+id/mag_ar"
                        android:paddingStart="15dp"
                        android:paddingEnd="15dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:text="المغرب"
                        android:textColor="@color/white"
                        android:textSize="38sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rect"
                    android:orientation="horizontal"
                    android:layout_marginBottom="10dp">

                    <TextView
                        android:id="@+id/isha_en"
                        android:paddingStart="15dp"
                        android:paddingEnd="15dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:text="Isha"
                        android:textColor="@color/white"
                        android:textSize="38sp" />

                    <TextView
                        android:id="@+id/isha_time"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="@string/textview"
                        android:textColor="@color/white"
                        android:textSize="38sp" />

                    <TextView
                        android:id="@+id/isha_ar"
                        android:paddingStart="15dp"
                        android:paddingEnd="15dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:text="العشاء"
                        android:textColor="@color/white"
                        android:textSize="38sp" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:orientation="vertical"
                android:background="@drawable/comp"
                android:id="@+id/comp"/>

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>